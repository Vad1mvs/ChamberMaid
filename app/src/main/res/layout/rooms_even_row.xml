<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/list_selector"
                android:id="@+id/rlImages"
                android:padding="1dip"
                android:visibility="visible">

    <ImageView
        android:id="@+id/balcony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/closed_r"
        android:layout_alignParentRight="true"
        android:paddingTop="4dp"
        android:paddingBottom="2dp"/>
    <ImageView
        android:id="@+id/window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/balcony"
        android:src="@drawable/closed_r"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/roomNum"
        android:paddingTop="2dp"/>
	<ImageView
		android:id="@+id/bed"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/twin_bed_s"
		android:layout_alignParentRight="true"
		android:layout_marginBottom="-2dp"
		android:visibility="visible"
		android:paddingRight="18dp"/>

    <ImageView
        android:id="@+id/bedWash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/change_bed2"
        android:visibility="gone"
        android:paddingRight="18dp"
        android:layout_below="@+id/broom"
        android:layout_alignLeft="@+id/time"
        android:layout_alignStart="@+id/time"
        android:paddingTop="4dp"/>

	<ImageView
		android:id="@+id/drop"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_centerVertical="true"
		android:src="@drawable/drops2"
		android:visibility="visible"
		android:layout_toLeftOf="@+id/roomNum"
		android:paddingRight="2dp"/>
	<TextView
		android:id="@+id/time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="12:00"
		android:textSize="@dimen/room_list_time_font_size"
		android:textColor="@color/black"
		android:textStyle="bold"
        android:visibility="invisible"
		android:layout_alignParentRight="true"
		android:paddingRight="15dp"/>

	<TextView
		android:id="@+id/roomNum"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/bed"
		android:layout_alignParentRight="true"
		android:text="123"
		android:textSize="@dimen/room_list_font_size"
        android:textColor="@color/empty"
		android:paddingRight="14dp"
		android:textStyle="bold" />

	<ImageView
		android:id="@+id/person"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/person24"
		android:layout_alignParentLeft="true"
        android:paddingTop="4dp"
		android:paddingBottom="4dp"
		android:paddingLeft="14dp"/>
	<ImageView
		android:id="@+id/broom"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/broom24"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/person"
		android:paddingLeft="14dp"/>
    <ImageView
        android:id="@+id/broom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/person"
        android:paddingLeft="14dp"
        android:layout_alignBottom="@+id/window"
        android:layout_alignRight="@+id/person"
        android:layout_alignEnd="@+id/person"
        />
    <ImageView
        android:id="@+id/door"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/opened_l"
        android:layout_alignParentLeft="true"
        android:paddingTop="4dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="notification"
        android:id="@+id/tvNotfication"
        android:visibility="invisible"
        android:textSize="16dp"
        android:layout_alignBottom="@+id/roomNum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/black"/>
</RelativeLayout>
