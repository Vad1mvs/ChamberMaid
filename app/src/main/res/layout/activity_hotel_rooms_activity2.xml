<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/footer_vertical_margin"
    android:paddingLeft="@dimen/footer_horizontal_margin"
    android:paddingRight="@dimen/footer_horizontal_margin"
    android:paddingTop="@dimen/footer_vertical_margin"
    tools:context="com.utis.chambermaid.HotelRoomsActivity2">

    <LinearLayout android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/footer_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/rooms_listview_horizontal_margin"
        android:paddingTop="@dimen/footer_vertical_margin"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/listViewRooms1"
                android:layout_alignParentBottom="true"
                android:divider="@color/lw_divider"
                android:dividerHeight="4dp"
                android:listSelector="@drawable/list_selector"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </ListView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/footer_vertical_margin"
        android:paddingLeft="@dimen/rooms_listview_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/footer_vertical_margin"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/listViewRooms2"
                android:divider="@color/lw_divider"
                android:layout_alignParentBottom="true"
                android:dividerHeight="4dp"
                android:listSelector="@drawable/list_selector"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </ListView>
        </RelativeLayout>
    </LinearLayout>
